<% include ./partials/header %>

<div class="container mt-5 border border-primary rounded-lg">
    <h1 class="mb-5 text-center font-weight-bold">Your Car Catalog</h1>
    <div class="row">
        <% cars.forEach((car)=>{   %>
            <div class="col-6">
                <h1 class="text-uppercase font-weight-bold"> <%=car.make %> <%=car.model %> </h1>
                <img src="<%=car.image %>" img-fluid" width="30%" class="mb-5"><a href="/cars/<%= car.id %>">CLICK HERE FOR DETAILS?</a>
                <h1> <%=car.description.substring(0,100) %> </h1>
            </div>
        <% }) %>
    </div>
    <p>
    <a href="/cars/new" class="display-3">ADD A CAR?</a>
    </p>
</div>



<% include ./partials/footer %>

